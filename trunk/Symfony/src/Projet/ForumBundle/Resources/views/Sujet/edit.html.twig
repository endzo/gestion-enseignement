{% extends "ProjetForumBundle::layout.html.twig" %}

{% block title %}
	Modification - {{ parent() }}
{% endblock %}

{% block Forum_body %}

<h1>Sujet edit</h1>

<form action="{{ path('sujet_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('sujet') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('sujet_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}