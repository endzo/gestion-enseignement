{% extends "AmineForumBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block Forum_body %}
	<b> {{ entity.title }} </b> est cr&eacute;&eacute; par : <b> {{ user.login }} </b>

	<table class="record_properties">
		<tbody>
			<tr>
				<th>Id</th>
				<td> {{ entity.id }} </td>
			</tr>
			<tr>
				<th>Title</th>
				<td> {{ entity.title }} </td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td> {{ entity.createdat|date('Y-m-d H:i:s') }} </td>
			</tr>
			<tr>
				<th>Visibility</th>
				<td> {{ entity.visibility }} </td>
			</tr>
		</tbody>
	</table>
	
	<table>
		{% for comment in comments %}
			<tr><td>{{ comment.comm }}</td></tr>
		{% endfor %}
	</table>
	

	<ul class="record_actions">
		<li>
			<a href="{{ path('subject') }}">
				Back to the list
			</a>
		</li>
		<li>
			<a href="{{ path('subject_edit', { 'id': entity.id }) }}">
				Edit
			</a>
		</li>
		<li>
			<form action="{{ path('subject_delete', { 'id': entity.id }) }}" method="post">
				{{ form_widget(delete_form) }}
				<button type="submit">Delete</button>
			</form>
		</li>
	</ul>
{% endblock %}