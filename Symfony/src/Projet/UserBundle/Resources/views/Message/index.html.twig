{% extends "ProjetUserBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block fos_user_content %}

<h1>Message list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Sujet</th>
            <th>Message</th>
            <th>Destinataire</th>
            <th>Created_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('message_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.sujet }}</td>
            <td>{{ entity.message }}</td>
            <td>{{ entity.destinataire }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('message_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('message_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('message_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}